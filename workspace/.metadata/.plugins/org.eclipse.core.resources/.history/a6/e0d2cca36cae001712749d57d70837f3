
public class Polygon {
	Point[] points;
	int n;
	
	Polygon(int n) {
		for (int i = 0; i < n; i++) {
			points[i] = new Point();
		}
	}
	
	Polygon(float[] colturi){
		this(colturi.length/2);
		int n = colturi.length / 2;
		for (int i = 0; i < n; i++) {
			points[i].x = colturi[2*i];
			points[i].y = colturi[2*i+1];
		}
	}

}
